a = float(input("Введіть перше число: "))
b = float(input("Введіть друге число: "))
operation = input("Введіть математичну дію (+, -, *, /): ")

if operation == "+":
    print(f"Результат: {a + b}")
elif operation == "-":
    print(f"Результат: {a - b}")
elif operation == "*":
    print(f"Результат: {a * b}")
elif operation == "/":
    if b != 0:
        print(f"Результат: {a / b}")
    else:
        print("Ділення на нуль!")
else:
    print("Некоректна дія!")
